<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Nelayan <%=freezer.namaIkan%></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
<%- include('partials/navbar', {pageName : 'Add Nelayan'})%>
<br><br><br>
  <div class="container">
    <br><br><br>
    <a href="/freezer"><button type="button" class="btn btn-info btn-sm">Tampilkan Semua Freezer</button></a><br>
  <h1><%=freezer.namaIkan%></h1>
  <form action="/freezer/nelayan/add/<%= freezer.id %>" method="post">

    <label for="nelayanId" id="nelayanId" name="nelayanId" >Nelayan</label><br>
    <select class="nelayanId" id="nelayanId">
        <option selected hidden value="">Pilih Nelayan</option>
        <%nelayan.forEach(element => { %>
            <option value="<%= element.id %>"> <%= element.namaNelayan %> </option>
        <% }) %>
    </select><br>
    <br><br><br>
    <button type="submit" class="btn btn-primary btn-sm">Simpan</button>
    <input type="button" class="btn btn-primary btn-sm" value="Cancel" onclick="location='/freeze'">
  </form>
  </div>

  <%- include('partials/footer')%>
</body>
<% if (errors) { %>
    <% errors.forEach (e => { %>
      <p style="color: red;"><%= e %></p>
    <% }) %>
<% } %>
</html> 